            <fileset dir="${basedir}/../../out/production/tij4/ch10innerclasses" includes="failures"/>
            <fileset dir="${basedir}/../../out/production/tij4/ch10innerclasses" includes="build.xml"/>
            <dirset dir="${basedir}/../../out/production/tij4/ch10innerclasses"/>
